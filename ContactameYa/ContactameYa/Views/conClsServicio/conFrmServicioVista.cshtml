@model ContactameYa.Models.conSERpServicio

@{
    //Layout = "~/Views/Shared/_CustomMasterLayout.cshtml";

    //Layout = "~/Views/_ViewStart.cshtml";

    //CATEGORIAS DE SERVICIOS Y SERVICIOS DEL PROVEEDOR
    List<ContactameYa.Models.conCATtCategoria> lstCategoriaServicios = ViewBag.lstCategoriaServicios;
    List<ContactameYa.Models.conSERpServicio> lstServicios = ViewBag.lstServicios;

    //LISTA DE ESTADOS
    List<SelectListItem> lstEstados = new List<SelectListItem>();
    List<SelectListItem> lstProvincias = new List<SelectListItem>();
    List<SelectListItem> lstDistritos = new List<SelectListItem>();



    lstEstados.Add(new SelectListItem() { Text = "Activo", Value = "A" });
    lstEstados.Add(new SelectListItem() { Text = "Inactivo", Value = "I" });

    //DEPARTAMENTOS
    List<ContactameYa.Models.conDTOtDepartamento> lstDepartamentos = ViewBag.lstDepartamentos;

}
<div class="row">
    @using (Html.BeginForm("mtdGuardar", "conClsServicio", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.SERid_servicio)

        <div class="form-horizontal">
            <h4>Servicios</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.conCATtCategoria.CATnombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.DropDownListFor(model => model.CATcodigo, lstCategoriaServicios, " Seleccione ", new { @class = "form-control" })*@

                    @Html.DropDownListFor(model => model.CATid_categoria,
                new SelectList(lstCategoriaServicios, "CATid_categoria", "CATnombre"), "Porfavor Seleccione...", new { @class = "form-control" })
                    @*@Html.EditorFor(model => model.CATcodigo, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.CATid_categoria, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SERnombre_servicio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SERnombre_servicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SERnombre_servicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SERdescripcion_servicio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SERdescripcion_servicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SERdescripcion_servicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SERprecio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SERprecio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SERprecio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SERimagenes, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SERimagenes, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SERimagenes, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SERestado, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.DropDownListFor(model => model.SERestado, lstEstados, " Seleccione ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SERestado, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.conCATtCategoria.CATnombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SERnombre_servicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SERdescripcion_servicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SERprecio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SERimagenes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model)
            </th>
            <th></th>
        </tr>

        @foreach (var item in lstServicios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.conCATtCategoria.CATnombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERnombre_servicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERdescripcion_servicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERprecio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERimagenes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SERestado)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "cyaFrmServicioVista", new { id = item.SERid_servicio })
                </td>
            </tr>
        }
    </table>
</div>
    

