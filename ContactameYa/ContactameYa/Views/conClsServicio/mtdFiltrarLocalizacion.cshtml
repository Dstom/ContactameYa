    <script>      

        function initMap() {
            
            map = new google.maps.Map(
                document.getElementById('map'),
                { center: new google.maps.LatLng(@ViewBag.GdecLatitud, @ViewBag.GdecLongitud), zoom: 15 });

            var markers = [];

            @foreach(var item in (List<ContactameYa.Models.conUSUpUsuario>)ViewBag.GobjMarkers)
            {
                var contenServicio = "";
                foreach(var servicios in item.conSERpServicio)
                {
                    contenServicio += servicios.SERnombre_servicio + " ";
                }

                @:markers.push({ position: new google.maps.LatLng(@item.USUlatitud.ToString().Replace(",","."), @item.USUlongitud.ToString().Replace(",",".")), proveedor: '@item.USUnombre @item.USUapellido', servicios: '@contenServicio'});
            }
            for (var i = 0; i < markers.length; i++) {
                var marker = new google.maps.Marker({
                    title: markers[i].proveedor,
                    position: markers[i].position,
                    map: map
                });

                var content = "<h6>Proveedor : " + markers[i].proveedor + '</h6>' + "Servicios: " + markers[i].servicios
                var infowindow = new google.maps.InfoWindow()
                google.maps.event.addListener(marker, 'click', (function (marker, content, infowindow) {
                    return function () {
                        infowindow.setContent(content);
                        infowindow.open(map, marker);
                    };
                })(marker, content, infowindow)); 
            };
        }
   
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAj6amlfad_SCcOkynTqQ2gWgm8kXZHPzA&callback=initMap" async defer></script> 

    <script>
        $(document).ready(function () {
            var Departamento = $("#Departamento");
            var Provincia = $("#Provincia");
            var Distrito = $("#Distrito");

            Departamento.on("change", function () {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("mtdListarProvincias", "conClsServicio")',
                    data: { id_departamento: $("#Departamento").val() },
                    dataType: "json",
                    success: function (data) {
                        Provincia.empty();
                        Provincia.append("<option >Seleccione</option>");

                        $.each(data, function () {
                            console.log(this.PRVid_provincia);
                            console.log(this.PRVnombre);
                            Provincia.append("<option value='" + this.PRVid_provincia + "'>" + this.PRVnombre + "</option>");
                        });
                    }
                });
            });

            Provincia.on("change", function () {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("mtdListarDistritos", "conClsServicio")',
                    data: { id_provincia: $("#Provincia").val() },
                    dataType: "json",
                    success: function (data) {
