@model IEnumerable<ContactameYa.Models.conCOTpCotizacion>

@{
    ViewBag.Title = "Cotizaciones de Usuarios";
}


<div class="row">
    @Html.Partial("_LeftBar")


    <div class="col-md-9">
        <h3>Cotizaciones </h3>
        <hr />
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.COTnombre_cotizacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.COTfecha_publicacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.COTfecha_limiteEntrega)
                    </th>
                    <th>Acciones</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.COTnombre_cotizacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.COTfecha_publicacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.COTfecha_limiteEntrega)
                        </td>
                        <td>
                            @Html.ActionLink("Ver", "conFrmVerCotizacion", new { id = item.COTid_cotizacion })

                            @Html.ActionLink("Responder", "conFrmResponderCotizacionVista", new { id = item.COTid_cotizacion })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
